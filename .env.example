# Kuzu database configuration
KUZU_DB_PATH=.kuzu/semantic.db
KUZU_MEMORY_LIMIT=1GB
KUZU_MAX_THREADS=4

# DuckDB configuration
DUCKDB_PATH=.duckdb/metrics.db
DUCKDB_THREADS=4
DUCKDB_MEMORY_LIMIT=1GB

# Agent configuration
AGENT_CONTEXT_WINDOW=20
AGENT_MAX_FILES=20
AGENT_CACHE_DIR=.agent

# Deno configuration
DENO_DIR=.cache/deno

# Node environment
NODE_ENV=development

# Analysis configuration
ANALYSIS_MAX_DEPTH=5
ANALYSIS_INCLUDE_TESTS=false
ANALYSIS_INCLUDE_NODE_MODULES=false

# Watch configuration
WATCH_POLL_INTERVAL=1000
WATCH_DEBOUNCE_MS=500
WATCH_IGNORE_PATTERNS=**/*.test.ts,**/node_modules/**,**/.git/**